<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>
    <style name="PlainTextStyle">
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">textPersonName</item>
    </style>


    <style name="spinnerWithBlackText" parent="@android:style/Widget.Spinner">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="customDimension">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">100dp</item> <!-- elevation == z index in css-->
    </style>

    <style name="dropdown_select">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:src">@drawable/white_drop_down</item>
    </style>



</resources>